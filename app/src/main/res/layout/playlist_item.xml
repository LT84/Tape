<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlist_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/playlist_default_icon"
        />

    <TextView
        android:id="@+id/playlist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/playlist_cover"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/playlist_songs_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/playlist_cover"
        android:layout_below="@id/playlist_name"
        android:layout_marginTop="2dp"
        android:layout_marginStart="7dp"
        android:textSize="11sp"
        />

    <ImageView
        android:id="@+id/about_playlist"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/decoration_arrow"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        />



</RelativeLayout>